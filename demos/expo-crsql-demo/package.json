{
	"name": "crsql-demo",
	"main": "expo-router/entry",
	"version": "1.0.0",
	"scripts": {
		"server:dev": "cd server; bun --hot src/server.tsx",
		"server:build": "cd server; bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
		"server:start": "cd server; NODE_ENV=production bun src/server.tsx",
		"build:web": "bun run ./build.ts",
		"build:web:docker": "docker build --no-cache -t expo-crsql-demo -f ../../Dockerfile.expo-crsql-demo ../..",
		"start:docker": "docker run -p 3000:3000 --rm expo-crsql-demo",
		"dev": "expo",
		"start": "expo start",
		"reset-project": "node ./scripts/reset-project.js",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"lint": "expo lint"
	},
	"dependencies": {
		"@expo/vector-icons": "^14.1.0",
		"@op-engineering/op-sqlite": "^14.1.4",
		"@react-navigation/bottom-tabs": "^7.3.10",
		"@react-navigation/elements": "^2.3.8",
		"@react-navigation/native": "^7.1.6",
		"expo": "~53.0.20",
		"expo-blur": "~14.1.5",
		"expo-constants": "~17.1.7",
		"expo-font": "~13.3.2",
		"expo-haptics": "~14.1.4",
		"expo-image": "~2.4.0",
		"expo-linking": "~7.1.7",
		"expo-router": "~5.1.4",
		"expo-splash-screen": "~0.30.10",
		"expo-status-bar": "~2.2.3",
		"expo-symbols": "~0.4.5",
		"expo-system-ui": "~5.0.10",
		"expo-web-browser": "~14.2.0",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-native": "0.79.5",
		"react-native-gesture-handler": "~2.24.0",
		"react-native-reanimated": "~3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-web": "~0.20.0",
		"react-native-webview": "13.13.5"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@types/react": "~19.0.10",
		"typescript": "~5.8.3",
		"eslint": "^9.25.0",
		"eslint-config-expo": "~9.2.0"
	},
	"workspaces": [
		"../../packages/bun-sqlite-lib",
		"../../packages/direct-connect-browser",
		"../../packages/direct-connect-common",
		"../../packages/crsqlite-wasm",
		"../../packages/id",
		"../../packages/logger-provider",
		"../../packages/p2p",
		"../../packages/react",
		"../../packages/rx-query",
		"../../packages/rx-tbl",
		"../../packages/ws-browserdb",
		"../../packages/ws-client",
		"../../packages/ws-common",
		"../../packages/xplat-api"
	],
	"private": true,
	"op-sqlite": {
		"crsqlite": true
	}
}
